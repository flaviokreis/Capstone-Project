<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingLeft="@dimen/abc_list_item_padding_horizontal_material"
    android:paddingRight="@dimen/abc_list_item_padding_horizontal_material">

    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:paddingStart="@dimen/abc_list_item_padding_horizontal_material"
        android:paddingEnd="48dp"/>

    <ImageView
        android:id="@+id/task_pause_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_pause_circle_outline_black_24dp"
        android:contentDescription="@string/click_to_pause_description"
        android:layout_marginEnd="@dimen/abc_list_item_padding_horizontal_material"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

</RelativeLayout>